<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.edu.dao.MemberDaoMapper">

	<select id="loginCheck" resultType="com.edu.domain.Member">
		SELECT * FROM member WHERE id=#{id}
		<!-- SELECT COUNT(*) FROM member WHERE id=#{id} -->
	</select>
	
	<select id="idCheck" resultType="com.edu.domain.Member">
		SELECT * FROM member WHERE id=#{id}
	</select>
	
	<insert id="joinMember" parameterType="com.edu.domain.Member" useGeneratedKeys="true" keyProperty="no">
		INSERT INTO member (id, pass, nick, email, logintype)
		VALUES(#{id}, #{pass},  #{nick},  #{email}, #{logintype} )
	</insert>
	
	<select id="login" resultType="com.edu.domain.Member">
		SELECT * FROM member WHERE id=#{id}
	</select>

	<select id="forgotPassword" resultType="com.edu.domain.Member">
		SELECT * FROM member WHERE id=#{id}
	</select>

	<update id="updateMember" parameterType="com.edu.domain.Member" useGeneratedKeys="true" keyProperty="no">
		UPDATE member
		SET nick=#{nick},email=#{email}
		WHERE id =#{id}
	</update>

	<update id="resetPassword" >

		UPDATE member
		SET pass=#{pass}
		WHERE id =#{id}
	</update>

	<update id="updatePass" parameterType="com.edu.domain.Member" useGeneratedKeys="true" keyProperty="no">
		UPDATE member
		SET pass=#{pass}
		WHERE id=#{id}
	</update>

	<insert id="kakaologin" parameterType="com.edu.domain.Member" useGeneratedKeys="true" keyProperty="no">
		<!-- INSERT INTO member (id,nick,email,reg_date)
		VALUES(#{id}, #{nick}, #{email}, SYSDATE()) -->
		INSERT INTO member (id,nick,email,reg_date)
		VALUES(#{id}, #{nick}, #{email}, SYSDATE())
	</insert>
	
	<insert id="naverlogin" parameterType="com.edu.domain.Member" useGeneratedKeys="true" keyProperty="no">
		INSERT INTO member (id,email,nick,gender,birth,name,profile_image,reg_date)
		VALUES(#{id},#{email},#{nick},#{gender},#{birth},#{name},#{profile_image},SYSDATE())
	</insert>
	
</mapper>	



